{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    // Legacy SPA entrypoint / migration artifacts (not used by Next app router)
    "App.tsx",
    "api-to-convert/**",
    "pages-to-convert/**",
    "nextjs-app/**",
    "apps/**",
    "script/**",
    "server/**",
    "lib/services/**",
    "server/vite.ts",
    "vite.config.ts",
    "vite-plugin-meta-images.ts",
    // Generated Next.js type artifacts accidentally committed
    "types/routes.d.ts",
    "types/cache-life.d.ts",
    "types/validator.ts",
    // E2E tests are handled by Playwright's own TS compilation
    "tests/**",
    "qa/**",
    // drizzle-kit CLI config file (compiled separately by drizzle-kit)
    "drizzle.config.ts",
    // Legacy src/ directory (not used by Next.js app router)
    "src/**"
  ]
}
