{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    // Legacy SPA entrypoint / migration artifacts (not used by Next app router)
    "App.tsx",
    "api-to-convert/**",
    "pages-to-convert/**",
    "nextjs-app/**",
    "script/**",
    "server/**",
    "lib/services/**",
    "shared/**",
    "server/vite.ts",
    "vite.config.ts",
    "vite-plugin-meta-images.ts",
    // Generated Next.js type artifacts accidentally committed
    "types/routes.d.ts",
    "types/cache-life.d.ts",
    "types/validator.ts"
  ]
}
